<Page x:Class="GoGameApp.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GoGameApp"
      mc:Ignorable="d"
      Background="Brown">
    <DockPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Width="250" Height="50" Margin="0, 0, 0, 30" Content="Start game" FontSize="16"/>
            <Button Width="250" Height="50" Margin="0, 0, 0, 30" Content="Settings" FontSize="16"/>
            <Button Width="250" Height="50" Content="Exit" FontSize="16"/>
        </StackPanel>
    </DockPanel>
</Page>
