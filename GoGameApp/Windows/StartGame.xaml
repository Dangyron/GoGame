<Window x:Class="GoGameApp.Windows.StartGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        ResizeMode="NoResize"
        Icon="https://thumbs.dreamstime.com/z/print-177674051.jpg"
        mc:Ignorable="d"
        Title="StartGame" Height = "230" Width="300">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter name for player 1:"/>
            <TextBox x:Name="Player1Name" Margin="0,5"/>
            <TextBlock Text="Enter name for player 2:" Margin="0,10"/>
            <TextBox x:Name="Player2Name" Margin="0,5"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Black" Margin="0,0,10,0" Click="ColorButton_Click"/>
                <Button Content="Random" Margin="0,0,10,0" Click="ColorButton_Click"/>
                <Button Content="White" Click="ColorButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
