<Window x:Class="GoGameApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeChanged="ChangeWindowSize"
        Icon="https://thumbs.dreamstime.com/z/print-177674051.jpg"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        MinHeight="700" MinWidth="900"
        Loaded="MainWindow_OnLoaded"
        MouseMove="MainWindow_OnMouseMove"
        Title="Go">
        <WindowChrome.WindowChrome>
                <WindowChrome CaptionHeight="5" ResizeBorderThickness="5"/>
        </WindowChrome.WindowChrome>
       
        <Canvas x:Name="BoardCanvas" MouseLeftButtonDown="BoardCanvas_OnMouseLeftButtonDown"/>
</Window>
